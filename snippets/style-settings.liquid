        --font-size-heading-1-desktop: 6.0rem;
        --line-height-heading-1-desktop: 6.2rem;
        --letter-spacing-heading-1-desktop: -0.005rem;
        --font-size-heading-1-mobile: 5.0rem;
        --line-height-heading-1-mobile: 5.0rem;
        --letter-spacing-heading-1-mobile: -0.005rem;

        --font-family-heading-2: var(--font-serif-family);
        --font-weight-heading-2: 400;
        --font-style-heading-2: normal;
        --font-size-heading-2-desktop: 5.0rem;
        --line-height-heading-2-desktop: 5.6rem;
        --letter-spacing-heading-2-desktop: -0.005rem;
        --font-size-heading-2-mobile: 3.4rem;
        --line-height-heading-2-mobile: 3.4rem;
        --letter-spacing-heading-2-mobile: -0.005rem;

        --font-family-heading-3: var(--font-serif-family);
        --font-weight-heading-3: 400;
        --font-style-heading-3: normal;
        --font-size-heading-3-desktop: 3.4rem;
        --line-height-heading-3-desktop: 3.6rem;
        --letter-spacing-heading-3-desktop: -0.005rem;
        --font-size-heading-3-mobile: 3.0rem;
        --line-height-heading-3-mobile: 3.0rem;
