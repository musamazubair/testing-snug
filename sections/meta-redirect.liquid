{%- unless request.design_mode -%}
<meta http-equiv="refresh" content="0; url={{ section.settings.redirect_url }}">
{%- endunless -%}

{% schema %}

{
    "name": "Meta Redirect",
    "tag": "section",
    "class": "section--meta-redirect",
    "limit": 1,

    "settings": [
        {
            "type": "url",
            "id": "redirect_link",
            "label": "Redirect link"
        }
    ]
}
{% endschema %}
