{% style %}


{% endstyle %}

<div
id="hp-newsletter-{{ section.id }}"
class="hp-newsletter-{{ section.id }} hp-newsletter isolate"
role="region"
aria-label="Homepage newsletter signup">

    {%- if section.settings.title != blank -%}
    <h2 class="hp-newsletter-title typography-heading typography-heading--9">{{ section.settings.title | newline_to_br }}</h2>
    {%- endif -%}

    

</div>


{% schema %}

{
    "name": "HP Newsletter",
    "tag": "section",
    "class": "section--hp-newsletter",
    "limit": 1,
    "templates": ["index"],

    "settings": [

        {
            "type": "richtext",
            "id": "title",
            "label": "Title",
            "info": "Use CMD+U or CTRL+U to underline"
        },

        {
            "type": "header",
            "content": "Section Padding"
        },

        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 120,
            "step": 5,
            "unit": "px",
            "label": "Padding Top",
            "default": 30
        },

        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 120,
            "step": 5,
            "unit": "px",
            "label": "Padding bottom",
            "default": 30
        }
    ],

    "presets": [
        {
            "name": "HP Newsletter"
        }
    ]
}


{% endschema %}
